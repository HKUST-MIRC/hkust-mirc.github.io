---
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Button from '~/components/ui/Button.astro';
import Image from '~/components/common/Image.astro';
import type { Testimonials as Props } from '~/types';

const {
  title = '',
  subtitle = '',
  tagline = '',
  testimonials = [],
  testimonials_array = [],
  groups = [],
  callToAction,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

// 渲染优先级：
// 1) testimonials_array（统一网格，不区分前两个）
// 2) groups（分组标题）
// 3) testimonials（还原原始布局：前两位 2 列，其余 3 列）
const hasArray = Array.isArray(testimonials_array) && testimonials_array.length > 0;
const hasGroups = Array.isArray(groups) && groups.length > 0;
const hasTestimonials = Array.isArray(testimonials) && testimonials.length > 0;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-6xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />

  { hasArray && (
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 justify-items-center max-w-6xl mx-auto">
        {testimonials_array.map(({ title, testimonial, name, job, image, url }) => (
          <div class="flex intersect-once motion-safe:md:intersect:animate-fade motion-safe:md:opacity-0 intersect-quarter w-full max-w-sm">
            <div class="flex flex-col items-center p-4 md:p-6 rounded-md shadow-xl dark:shadow-none dark:border dark:border-slate-600 text-center w-full h-full min-h-[280px]">
              {image && (
                <div class="mb-4 flex-shrink-0">
                  {typeof image === 'string' ? (
                    <Fragment set:html={image} />
                  ) : (
                    <Image
                      class="h-24 w-24 rounded-full border-2 border-slate-200 dark:border-slate-600 object-cover"
                      width={96}
                      height={96}
                      widths={[192, 384]}
                      layout="fixed"
                      {...image}
                    />
                  )}
                </div>
              )}

              <div class="flex flex-col items-center flex-grow">
                {name && url && (
                  <a
                    href={url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-lg font-semibold mb-1 text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 hover:underline transition-colors duration-200"
                  >
                    {name}
                  </a>
                )}
                {name && !url && <h3 class="text-lg font-semibold mb-1">{name}</h3>}
                {job && <p class="text-sm text-muted mb-4">{job}</p>}

                {title && <h2 class="text-lg font-medium leading-6 pb-4">{title}</h2>}
                {testimonial && (
                  <blockquote class="flex-auto">
                    <p class="text-muted">" {testimonial} "</p>
                  </blockquote>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    ) }

  {
    !hasArray && hasGroups && (
      <>
        {groups.map((group, groupIndex) => {
          const groupItems = group.items || [];
          if (groupItems.length === 0) return null;

          return (
            <div class={groupIndex > 0 ? 'mt-12 md:mt-16' : ''}>
              {/* Group Title */}
              {group.title && (
                <h3 class="text-2xl md:text-3xl font-bold text-center mb-8 md:mb-12 text-heading">
                  {group.title}
                </h3>
              )}

              {/* Directors/First 2 Section - 2 columns */}
              {groupItems.length > 0 && (
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-6 mb-8 justify-items-center max-w-4xl mx-auto">
                  {groupItems.slice(0, 2).map(({ title, testimonial, name, job, image, url }) => (
                    <div class="flex intersect-once motion-safe:md:intersect:animate-fade motion-safe:md:opacity-0 intersect-quarter w-full max-w-sm">
                      <div class="flex flex-col items-center p-4 md:p-6 rounded-md shadow-xl dark:shadow-none dark:border dark:border-slate-600 text-center w-full h-full min-h-[280px]">
                        {image && (
                          <div class="mb-4 flex-shrink-0">
                            {typeof image === 'string' ? (
                              <Fragment set:html={image} />
                            ) : (
                              <Image
                                class="h-24 w-24 rounded-full border-2 border-slate-200 dark:border-slate-600 object-cover"
                                width={96}
                                height={96}
                                widths={[192, 384]}
                                layout="fixed"
                                {...image}
                              />
                            )}
                          </div>
                        )}

                        <div class="flex flex-col items-center flex-grow">
                          {name && url && (
                            <a
                              href={url}
                              target="_blank"
                              rel="noopener noreferrer"
                              class="text-lg font-semibold mb-1 text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 hover:underline transition-colors duration-200"
                            >
                              {name}
                            </a>
                          )}
                          {name && !url && <h3 class="text-lg font-semibold mb-1">{name}</h3>}
                          {job && <p class="text-sm text-muted mb-4">{job}</p>}

                          {title && <h2 class="text-lg font-medium leading-6 pb-4">{title}</h2>}
                          {testimonial && (
                            <blockquote class="flex-auto">
                              <p class="text-muted">" {testimonial} "</p>
                            </blockquote>
                          )}
                        </div>
                      </div>
                    </div>
                  ))}
                </div>
              )}

              {/* Other Members Section - 3 columns */}
              {groupItems.length > 2 && (
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 justify-items-center max-w-6xl mx-auto">
                  {groupItems.slice(2).map(({ title, testimonial, name, job, image, url }) => (
                    <div class="flex intersect-once motion-safe:md:intersect:animate-fade motion-safe:md:opacity-0 intersect-quarter w-full max-w-sm">
                      <div class="flex flex-col items-center p-4 md:p-6 rounded-md shadow-xl dark:shadow-none dark:border dark:border-slate-600 text-center w-full h-full min-h-[280px]">
                        {image && (
                          <div class="mb-4 flex-shrink-0">
                            {typeof image === 'string' ? (
                              <Fragment set:html={image} />
                            ) : (
                              <Image
                                class="h-24 w-24 rounded-full border-2 border-slate-200 dark:border-slate-600 object-cover"
                                width={96}
                                height={96}
                                widths={[192, 384]}
                                layout="fixed"
                                {...image}
                              />
                            )}
                          </div>
                        )}

                        <div class="flex flex-col items-center flex-grow">
                          {name && url && (
                            <a
                              href={url}
                              target="_blank"
                              rel="noopener noreferrer"
                              class="text-lg font-semibold mb-1 text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 hover:underline transition-colors duration-200"
                            >
                              {name}
                            </a>
                          )}
                          {name && !url && <h3 class="text-lg font-semibold mb-1">{name}</h3>}
                          {job && <p class="text-sm text-muted mb-4">{job}</p>}

                          {title && <h2 class="text-lg font-medium leading-6 pb-4">{title}</h2>}
                          {testimonial && (
                            <blockquote class="flex-auto">
                              <p class="text-muted">" {testimonial} "</p>
                            </blockquote>
                          )}
                        </div>
                      </div>
                    </div>
                  ))}
                </div>
              )}
            </div>
          );
        })}
      </>
    )
  }
  {
    !hasArray && !hasGroups && hasTestimonials && (
      <>
        {/* 前两位 - 2 列 */}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-6 mb-8 justify-items-center max-w-4xl mx-auto">
          {testimonials.slice(0, 2).map(({ title, testimonial, name, job, image, url }) => (
            <div class="flex intersect-once motion-safe:md:intersect:animate-fade motion-safe:md:opacity-0 intersect-quarter w-full max-w-sm">
              <div class="flex flex-col items-center p-4 md:p-6 rounded-md shadow-xl dark:shadow-none dark:border dark:border-slate-600 text-center w-full h-full min-h-[280px]">
                {image && (
                  <div class="mb-4 flex-shrink-0">
                    {typeof image === 'string' ? (
                      <Fragment set:html={image} />
                    ) : (
                      <Image
                        class="h-24 w-24 rounded-full border-2 border-slate-200 dark:border-slate-600 object-cover"
                        width={96}
                        height={96}
                        widths={[192, 384]}
                        layout="fixed"
                        {...image}
                      />
                    )}
                  </div>
                )}

                <div class="flex flex-col items-center flex-grow">
                  {name && url && (
                    <a
                      href={url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-lg font-semibold mb-1 text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 hover:underline transition-colors duration-200"
                    >
                      {name}
                    </a>
                  )}
                  {name && !url && <h3 class="text-lg font-semibold mb-1">{name}</h3>}
                  {job && <p class="text-sm text-muted mb-4">{job}</p>}

                  {title && <h2 class="text-lg font-medium leading-6 pb-4">{title}</h2>}
                  {testimonial && (
                    <blockquote class="flex-auto">
                      <p class="text-muted">" {testimonial} "</p>
                    </blockquote>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>

        {/* 其余 - 3 列 */}
        {testimonials.length > 2 && (
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 justify-items-center max-w-6xl mx-auto">
            {testimonials.slice(2).map(({ title, testimonial, name, job, image, url }) => (
              <div class="flex intersect-once motion-safe:md:intersect:animate-fade motion-safe:md:opacity-0 intersect-quarter w-full max-w-sm">
                <div class="flex flex-col items-center p-4 md:p-6 rounded-md shadow-xl dark:shadow-none dark:border dark:border-slate-600 text-center w-full h-full min-h-[280px]">
                  {image && (
                    <div class="mb-4 flex-shrink-0">
                      {typeof image === 'string' ? (
                        <Fragment set:html={image} />
                      ) : (
                        <Image
                          class="h-24 w-24 rounded-full border-2 border-slate-200 dark:border-slate-600 object-cover"
                          width={96}
                          height={96}
                          widths={[192, 384]}
                          layout="fixed"
                          {...image}
                        />
                      )}
                    </div>
                  )}

                  <div class="flex flex-col items-center flex-grow">
                    {name && url && (
                      <a
                        href={url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-lg font-semibold mb-1 text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 hover:underline transition-colors duration-200"
                      >
                        {name}
                      </a>
                    )}
                    {name && !url && <h3 class="text-lg font-semibold mb-1">{name}</h3>}
                    {job && <p class="text-sm text-muted mb-4">{job}</p>}

                    {title && <h2 class="text-lg font-medium leading-6 pb-4">{title}</h2>}
                    {testimonial && (
                      <blockquote class="flex-auto">
                        <p class="text-muted">" {testimonial} "</p>
                      </blockquote>
                    )}
                  </div>
                </div>
              </div>
            ))}
          </div>
        )}
      </>
    )
  }

  {
    callToAction && (
      <div class="flex justify-center mx-auto w-fit mt-8 md:mt-12 font-medium">
        <Button {...callToAction} />
      </div>
    )
  }
</WidgetWrapper>
