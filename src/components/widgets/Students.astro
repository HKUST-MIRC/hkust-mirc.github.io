---
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';

export interface Student {
  name: string;
  program: string;
  department: string;
  url?: string;
  year?: string;
}

export interface Props {
  title?: string;
  subtitle?: string;
  tagline?: string;
  students?: Student[];
  groups?: {
    title?: string;
    students: Student[];
  }[];
  id?: string;
  isDark?: boolean;
  classes?: Record<string, string>;
  bg?: string;
}

const {
  title = '',
  subtitle = '',
  tagline = '',
  students = [],
  groups = [],
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

const hasGroups = Array.isArray(groups) && groups.length > 0;
const hasStudents = Array.isArray(students) && students.length > 0;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-6xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />

  {
    hasGroups && (
      <div class="space-y-12">
        {groups.map((group) => (
          <div>
            {group.title && (
              <h3 class="text-xl md:text-2xl font-bold mb-6 text-heading border-b-2 border-primary pb-2">
                {group.title}
              </h3>
            )}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
              {group.students.map((student) => (
                <div class="intersect-once motion-safe:md:intersect:animate-fade motion-safe:md:opacity-0 intersect-quarter">
                  <div class="p-4 rounded-lg border border-slate-200 dark:border-slate-700 hover:shadow-md transition-shadow duration-200 h-full bg-white dark:bg-slate-800">
                    {student.url ? (
                      <a
                        href={student.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="font-semibold text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 hover:underline transition-colors duration-200"
                      >
                        {student.name}
                      </a>
                    ) : (
                      <h4 class="font-semibold text-heading">{student.name}</h4>
                    )}
                    <p class="text-sm text-muted mt-1">{student.program}</p>
                    <p class="text-xs text-muted mt-0.5">{student.department}</p>
                    {student.year && <p class="text-xs text-muted mt-0.5">{student.year}</p>}
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    )
  }

  {
    !hasGroups && hasStudents && (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {students.map((student) => (
          <div class="intersect-once motion-safe:md:intersect:animate-fade motion-safe:md:opacity-0 intersect-quarter">
            <div class="p-4 rounded-lg border border-slate-200 dark:border-slate-700 hover:shadow-md transition-shadow duration-200 h-full bg-white dark:bg-slate-800">
              {student.url ? (
                <a
                  href={student.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="font-semibold text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 hover:underline transition-colors duration-200"
                >
                  {student.name}
                </a>
              ) : (
                <h4 class="font-semibold text-heading">{student.name}</h4>
              )}
              <p class="text-sm text-muted mt-1">{student.program}</p>
              <p class="text-xs text-muted mt-0.5">{student.department}</p>
              {student.year && <p class="text-xs text-muted mt-0.5">{student.year}</p>}
            </div>
          </div>
        ))}
      </div>
    )
  }
</WidgetWrapper>
