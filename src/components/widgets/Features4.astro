---
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Features as Props } from '~/types';

export interface ResearchItem {
  title: string;
  items: string[];
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  items = [],
  columns = 2,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-6xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} classes={classes?.headline as Record<string, string>} />

  <div class={`grid grid-cols-1 ${columns === 2 ? 'md:grid-cols-2' : 'md:grid-cols-3'} gap-8 lg:gap-10`}>
    {
      items.map((item: ResearchItem, index: number) => (
        <div class="intersect-once motion-safe:md:intersect:animate-fade motion-safe:md:opacity-0 intersect-quarter p-6 rounded-lg border border-slate-200 dark:border-slate-700 shadow-sm hover:shadow-md transition-shadow duration-200 bg-white dark:bg-slate-900">
          <div class="flex items-start gap-3">
            <div class="flex-shrink-0 pt-1">
              <div class="flex items-center justify-center h-6 w-6 rounded-md bg-primary text-white font-semibold text-sm">
                {index + 1}
              </div>
            </div>
            <div class="flex-grow">
              <h3 class="text-lg font-bold mb-3 text-heading">{item.title}</h3>
              <ul class="space-y-2">
                {item.items &&
                  item.items.map((subItem: string) => (
                    <li class="flex items-start gap-2 text-sm text-muted">
                      <span class="text-primary font-bold flex-shrink-0 mt-0.5">â€¢</span>
                      <span>{subItem}</span>
                    </li>
                  ))}
              </ul>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</WidgetWrapper>
